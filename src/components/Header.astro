  }

  @media screen and (max-width: 960px) {
    .nav {
      background: var(--negro);
      position: absolute;
      width: 100%;
      display: flex;
      flex-flow: column nowrap;
      justify-content: center;
      align-items: center;
      height: 100vh;
      z-index: 1;
      gap: 3em;
      opacity: 0;
      pointer-events: none;
      text-align: center;
      transform: scale(0.5);
      transition: all 330ms ease-out;
    }
    .nav.open {
      pointer-events: auto;
      opacity: 1;
      transform: scale(1);
      transition: all 330ms ease-out;
    }
    .nav__menu {
      position: static;
      font-size: 1.25em;
      margin: 0em 0em;
    }
    .nav__rrss {
      position: static;
      margin: 0em 0em;
      gap: 1em;
    }
    .rrss__email {
      writing-mode: horizontal-tb;
      font-size: 1em;
    }
    .rrss__rs {
      display: flex;
      flex-flow: row nowrap;
      justify-content: center;
      align-items: center;
      gap: 2em;
    }
    .rrss__rs svg {
      width: 2em;
    }
    .hamburger {
      position: fixed;
      z-index: 1;
      right: 2em;
      bottom: 2em;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 4em;
      height: 4em;
      padding: 1em;
      background: var(--negro);
      border-radius: 100%;
      box-shadow:
        9px 9px 17px #1b1b1b,
        -9px -9px 17px #353535;
      cursor: pointer;
      transition: transform 330ms ease-out;
    }
    .hamburger.open {
      transform: rotate(-45deg);
    }
    .hamburger.open .hamburger__line--start {
      transform: rotate(-90deg) translateX(2px);
      -webkit-transform: rotate(-90deg) translateX(2px);
      -moz-transform: rotate(-90deg) translateX(2px);
      -ms-transform: rotate(-90deg) translateX(2px);
      -o-transform: rotate(-90deg) translateX(2px);
    }
    .hamburger.open .hamburger__line--end {
      transform: rotate(-90deg) translateX(-3px);
    }
    .hamburger__line {
      background-color: #fff;
      border-radius: 5px;
      width: 100%;
      height: 4px;
    }
    .hamburger__line--end {
      align-self: flex-end;
      transition: transform 330ms cubic-bezier(0.54, -0.81, 0.57, 0.57);
      transform-origin: left;
    }
    .hamburger__line--half {
      width: 50%;
    }
    .hamburger__line--start {
      transition: transform 330ms cubic-bezier(0.54, -0.81, 0.57, 0.57);
      transform-origin: right;
    }
  }
  </style>
